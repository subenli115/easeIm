<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar.PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--设置背景色-->
        <!--<item name="android:background">@color/white</item>-->
        <!--设置字体颜色-->
        <item name="android:textColor">@color/black</item>
        <!--设置不覆盖锚点，即不覆盖三个点-->
        <item name="overlapAnchor">false</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/btn_gray_normal</item>
        <item name="android:textSize">12sp</item>
        <!--<item name="android:background">@drawable/ease_timestampe_bg</item>-->
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#BCBECC</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>
    <declare-styleable name="RoundImageView">
        <!-- 描边宽度-->
        <attr name="border_width1" format="dimension" />
        <!-- 描边颜色-->
        <attr name="border_color1" format="color" />
        <!--圆角大小-->
        <attr name="corner_radius" format="dimension" />
        <!--左上圆角大小-->
        <attr name="leftTop_corner_radius" format="dimension" />
        <!--右上圆角大小-->
        <attr name="rightTop_corner_radius" format="dimension" />
        <!--左下圆角大小-->
        <attr name="leftBottom_corner_radius" format="dimension" />
        <!--右下圆角大小-->
        <attr name="rightBottom_corner_radius" format="dimension" />
        <!--图片类型：圆角或者圆形-->
        <attr name="roun_type" format="enum">
            <enum name="oval" value="2" />
            <enum name="round" value="1" />
            <enum name="circle" value="0" />
        </attr>
    </declare-styleable>
    <style name="chat_location_content_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="ease_row_sent_iv_fail_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ease_msg_state_failed_resend</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ease_row_sent_iv_userhead_style">
        <item name="android:layout_width">29dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="ease_round_radius">3dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="ease_shape_type">rectangle</item>
        <item name="android:layout_marginRight">@dimen/ease_chat_avatar_margin</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ease_row_receive_iv_userhead_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="ease_shape_type">rectangle</item>
        <item name="ease_round_radius">3dp</item>
        <item name="android:layout_marginLeft">@dimen/ease_chat_avatar_margin</item>
        <item name="android:src">@drawable/ease_default_avatar</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ease_chat_input_button_size">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>